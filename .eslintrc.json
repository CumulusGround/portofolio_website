{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/prop-types": 0,
    "no-console": "warn",
    "react-hooks/rules-of-hooks": 2, // cant be in if statements
    "react-hooks/exhaustive-deps": 1
  },
  "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true, //allows async awaits type stuff
    "browser": true, // allows web browser api
    "node": true //allows require etc
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
